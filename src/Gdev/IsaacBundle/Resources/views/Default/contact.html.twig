{% extends "GdevIsaacBundle::layout.html.twig" %}

{% block title %}
  Contact - {{ parent() }}
{% endblock %}

{% block gdevisaac_body %}

<!-- Page Content -->
<div class="container">
     <div class="col-lg-12">
            <h3 class="page-header">Contact</h3>
        </div>
    <br/>
    <!-- Content Row -->
    <div class="row">
        <!-- Map Column -->
        <div class="col-md-8">
            <!-- Embedded Google Map -->
            <iframe width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://regiohelden.de/google-maps/map_en.php?hl=en&amp;q=caen+(RegioHelden%20GmbH)&amp;ie=UTF8&amp;t=&amp;z=12&amp;iwloc=A&amp;output=embed"></iframe>
        </div>
        <!-- Contact Details Column -->
        <div class="col-md-4">
            <h3>Details</h3>
            <p>
                Caen<br>14000 France<br>
            </p>
            <p><i class="fa fa-phone"></i>
                <abbr title="Phone">P</abbr>: 02 23 23 23 23</p>
            <p><i class="fa fa-envelope-o"></i>
                <abbr title="Email">E</abbr>: <a href="mailto:contact@guillaumedev.com">contact@guillaumedev.com</a>
            </p>
            <ul class="list-unstyled list-inline list-social-icons">
                <li>
                    <a href="https://twitter.com/dev_gui"><i class="fa fa-twitter-square fa-2x"></i></a>
                </li>
            </ul>
            <a href="http://guillaumedev.com">guillaumedev.com</a>
        </div>
    </div>
    <!-- /.row -->

    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
        <div class="col-md-8">
            <h3>Me contacter</h3>
            <form name="sentMessage" id="contactForm" novalidate>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Nom:</label>
                        <input type="text" class="form-control" id="name" required data-validation-required-message="Please enter your name.">
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Mail:</label>
                        <input type="email" class="form-control" id="email" required data-validation-required-message="Please enter your email address.">
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Message:</label>
                        <textarea rows="10" cols="100" class="form-control" id="message" required data-validation-required-message="Please enter your message" maxlength="999" style="resize:none"></textarea>
                    </div>
                </div>
                <div id="success"></div>
                <!-- For success/fail messages -->
                <button type="submit" class="btn btn-primary">Envoyer</button>
                <br/><br/>
            </form>
        </div>
    </div>
</div>

{% endblock %}