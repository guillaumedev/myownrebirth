
{% extends "GdevIsaacBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}




<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
                <h2 class="form-signin-heading">Connectez-vous !</h2>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username"  class="form-control" name="_username" value="{{ last_username }}" required="required" placeholder="Email address" required autofocus/>

                <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password"/>

                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

                <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="Login" />
                <br/>
                <a href='{{ path('fos_user_registration_register') }}'><input type='button' class="btn btn-lg btn-primary btn-block" value="S'inscrire"></a>
            </form>
            <br/>
            <div class="text-center">
                <form id="fp_openid_login" action="{{ path("fp_openid_security_check") }}" method="post">

                    <input type="hidden" id="openid_identifier" name="openid_identifier" value="https://steamcommunity.com/openid/" />
                    <input type="hidden" id="target_path" name="_target_path" value="" />

                    <input class="steamLog" type="submit" id="_submit" name="_submit" value="" />
                </form>
            </div>
        </div>
    </div>
</div> <!-- /container -->
<br/>


{% endblock fos_user_content %}
